{
    "name": "gdpa/kavenegar",
    "description": "Kavenegar Notifications driver",
    "homepage": "https://github.com/gdpa/kavenegar",
    "license": "MIT",
    "authors": [
        {
            "name": "Morteza Poussaneh",
            "email": "morteza.poussaneh@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "illuminate/notifications": "^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.3",
        "orchestra/testbench": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Kavenegar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\Kavenegar\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
